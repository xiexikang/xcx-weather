/* pages/weather/weather.wxss */
page{ background-color: #00BFFF;background-color: rgb(0, 171, 228); color: #fff;}
.the-weather{ width: 100%; height: 100%; }
.wea-thead{ width: 100%; text-align: center; overflow: hidden; padding-bottom: 30rpx;}
.we-name{ font-size: 70rpx; padding-top: 40rpx;}
.we-regime{ font-size: 36rpx; margin-top: 15rpx;}
.we-temperature{ font-size:90rpx; margin-top: 15rpx;}

.wea-today{ width: 100%;  height: auto; overflow: hidden;}
.today-info{ width: 100%; padding: 20rpx 30rpx; border-bottom: 1px solid #b5e4ff; overflow: hidden; box-sizing: border-box;}
.today-info .fo-left{ float: left;}
.today-info .fo-left .week{ font-size: 34rpx;}
.today-info .fo-left .tian{ font-size: 26rpx; margin-left: 10rpx;}
.today-info .fo-right{ float: right; font-size: 30rpx;}
.today-info .fo-right .wd-high{ color: #fff;}
.today-info .fo-right .wd-low{ color:rgb(209, 236, 255); margin-left: 40rpx;}
.today-oth{ width: 100%; padding: 20rpx 25rpx; border-bottom: 1px solid #b5e4ff; overflow: hidden; box-sizing: border-box; }
.td-list{ min-width: 50%; overflow-x: auto; overflow-y: hidden; display: flex;}
.td-list .li{ padding: 0 22rpx; height: 150rpx; text-align: center;
  -webkit-box-flex: inherit;  -webkit-flex-grow: inherit;  -moz-box-flex: inherit;  -ms-flex-positive: inherit;
  flex-grow: inherit; -webkit-flex-shrink: 0;  -ms-flex-negative: 0;  flex-shrink: 0;    -webkit-box-align: center;
  -webkit-align-items: center;  -ms-flex-align: center;  align-items: center;  -webkit-box-pack: center;
  -webkit-justify-content: center;  -ms-flex-pack: center;  justify-content: center;  -webkit-tap-highlight-color: transparent;
}
.td-list .t-time{ font-size: 28rpx; display: block;}
.td-list .ico{ width: 30rpx; height: 30rpx; background-color: #fff; margin-top: 15rpx;}
.td-list .t-du{ font-size: 30rpx; margin-top: 15rpx; display: block;}

.week-long{ width: 100%; height: auto; overflow: hidden; border-bottom: 1px solid #b5e4ff;}
.loog-list{ padding: 0 30rpx; overflow: hidden;}
.loog-list .mol{ padding: 15rpx 0; overflow: hidden;}
.loog-list .mol .tn{ width: 25%; font-size: 30rpx; float: left;}
.loog-list .mol .tic{ width: 50%; float: left; text-align: center;}
.loog-list .mol .tic .ico{ width: 30rpx; height: 30rpx; display:inline-block; background-color: #fff; }
.loog-list .mol .te{ width: 25%; float: right; text-align: right; font-size: 26rpx;}
.loog-list .mol .te .te-hign{ margin-right: 30rpx;}
.loog-list .mol .te .te-low{ color: rgb(209, 236, 255);}

.wea-describe{ width: 100%; height: auto; overflow: hidden; border-bottom: 1px solid #b5e4ff; padding: 20rpx 30rpx; box-sizing: border-box; }
.wea-describe .des{ font-size: 28rpx; line-height: 2; }

.wea-record{ width: 100%; height: auto; overflow: hidden;}
.wea-record .rec-list{ padding: 0 30rpx; overflow: hidden;}
.wea-record .rec-list .mok{ padding: 15rpx 0; border-bottom: 1px solid #b5e4ff; overflow: hidden; }
.wea-record .rec-list .mok:last-of-type{ border-bottom-color:transparent;}
.wea-record .rec-list .mok .mok-tl,.wea-record .rec-list .mok .mok-tr{ width: 50%; float:left; overflow: hidden;
  padding-right: 15rpx; box-sizing: border-box; }
.wea-record .rec-list .mok .mok-tr{ float: right;}
.wea-record .rec-list .k-t{ font-size: 20rpx; color: rgb(209, 236, 255); display: block;}
.wea-record .rec-list .k-d{ font-size: 36rpx; color: #fff; display: block; margin-top: 5rpx; }